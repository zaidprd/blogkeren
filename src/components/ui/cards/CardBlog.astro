---
import { Image } from "astro:assets";
import { formatDate } from "@utils/utils";

interface Props {
  blogEntry: {
    data: {
      title: string;
      slug: string;
      author: string;
      cardImage: { url: string; altText: string };
      pubDate: Date;
      readTime: number;
    };
  };
}

const { blogEntry } = Astro.props;
---

<a href={`/blog/${blogEntry.data.slug}`}>
  <article class="group relative flex h-full flex-col">
    <div class="relative h-[25rem] w-full overflow-hidden rounded-xl">
      <img
        class="h-full w-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-105"
        src={blogEntry.data.cardImage.url}
        alt={blogEntry.data.cardImage.altText || "Gambar"}
        draggable={"false"}
        loading={"lazy"}
      />
    </div>
    <div class="mt-4">
      <p class="text-xs font-medium text-neutral-600 dark:text-neutral-400">
        {formatDate(blogEntry.data.pubDate)}
      </p>
      <h3
        class="text-pretty font-semibold text-neutral-800 transition-colors duration-500 ease-in-out group-hover:text-primary-600 dark:text-neutral-200"
      >
        {blogEntry.data.title}
      </h3>
      <div class="mt-3 flex items-center gap-x-2.5 text-xs">
        <span class="font-medium text-neutral-800 dark:text-neutral-200"
          >{blogEntry.data.author}</span
        >
        <span class="text-neutral-500 dark:text-neutral-500">â€¢</span>
        <span class="text-neutral-500 dark:text-neutral-500"
          >{blogEntry.data.readTime} min read</span
        >
      </div>
    </div>
  </article>
</a>